.mar_b_20 {
  margin-bottom: 20rpx;
}

.g_issue {
  background-color: #f0f0f0;
  padding: 20rpx 0rpx 60rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  font-family: PingFang SC, Helvetica Neue, Arial, sans-serif;
}

/* item */


.item_right {
  padding-right: 30rpx;
}

.min_item {
  min-height: 98rpx;
}

.lkd_item {
  background: white;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
}

.star {
  position: relative;
  flex-shrink: 0;
}

.star:before {
  position: absolute;
  content: "*";
  left: -15rpx;
  top: 6rpx;
  font-size: 14px;
  color: #ee0a24;
}

.small_size .van-field__input {
  font-size: 26rpx;
}

.small_size .van-cell {
  padding-right: 0;
  padding-left: 0;
  width: 230rpx;
}

.tag_box {
  display: flex;
  flex-flow: row wrap;
  /* justify-content: center; */
  padding: 10rpx;
  background-color: white;
  margin-bottom: 10rpx;
}

.large_btn {
  width: 600rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.button_box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.lkd_tag {
  position: relative;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.lkd_tag.btn_padding_right .van-button__text {
  padding-right: 20rpx;

}

.lkd_tag .lkd_close {
  position: absolute;
  right: 6rpx;
  top: 4rpx;
  line-height: 50rpx;
}

/* other */
.uploadImg {
  width: 100%;
  height: 90rpx;
  background-color: white;
}

.g_issue .title {
  font-size: 32rpx;
  color: #f26746;
  padding: 20rpx 0 20rpx 30rpx;
  font-weight: 900;
}

.address_icon {
  color: #f26746;
}

.delIcon {
  position: absolute;
  right: -5%;
  top: -25%;

}

.active_img {
  width: 690rpx;
  height: 319rpx;
  margin: 0 auto;
}

.upload {
  height: 319rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.item {
  width: 690rpx;
  background: rgba(255, 255, 255, 1);
  padding: 0 21rpx;
  box-sizing: border-box;
  position: relative;
  margin: 0 auto;
}

.noPadding {
  padding: 0;
}

.pla_img {
  border: 1rpx solid rgba(240, 240, 240, 1);
  border-radius: 10px;
  font-size: 26rpx;
  color: #999;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx 8rpx;
}

.note_img {
  width: 60rpx;
  height: 48rpx;
}

.zh_item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.zh_btn {
  /* width: 126rpx; */
  height: 40rpx;
  color: white;
  font-size: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background-color: #E8380D;
  position: absolute;
  right: 30rpx;
  top: 14rpx;
}

.zh_img {
  width: 22rpx;
  height: 19rpx;
  margin: 0 10rpx;
}

.textarea {
  margin: 0 auto;
  width: 690rpx;
  box-sizing: border-box;
  min-height: 154rpx;
  border-radius: 10rpx;
  background-color: white;
  padding: 20rpx;
  display: flex;
  flex-flow: row wrap;
}

.del {
  font-size: 24rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: rgba(102, 102, 102, 0.3);
  position: absolute;
  right: 0;
  top: 0;
}

.desc_add {
  width: 160rpx;
  height: 160rpx;
  line-height: 150rpx;
  border: 1rpx solid rgba(102, 102, 102, 1);
  color: rgba(102, 102, 102, 1);
  font-size: 100rpx;
  text-align: center;
}

.desc_image {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  border: 1rpx solid rgba(102, 102, 102, 0.3);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.desc_image image {
  width: 150rpx;
  height: 150rpx;
}

.submit {
  width: 690rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #F26746;
  border-radius: 10px;
  color: white;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  margin-top: 100rpx;
}

.submit_green {
  background: #08C9A1;
  margin-top: 30rpx;
}