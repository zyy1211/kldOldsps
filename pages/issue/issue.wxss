/* pages/issue/issue.wxss */

.issue {
    background-color: #f0f0f0;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    padding-top: 20rpx;
    font-size: 26rpx;
    color: #333;
}
.loading{
    position: fixed;
    top: 0;
    left: 0;
    width:100vw;
    height:100vh;
    background:black;
    opacity: 0.6;
    z-index:999;
}
.wx-switch-input {
    zoom: 0.7;
}
.agreeBox{
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
}
.defalutTab{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
}

.wx-radio-input {
    width: 22rpx !important;
    height: 22rpx !important;
    border-radius: 50%;
}

.item {
    width: 690rpx;
    background: rgba(255, 255, 255, 1);
    padding: 0 21rpx;
    box-sizing: border-box;
    position: relative;
}
.noPadding{
    padding: 0;
}

.item .right {
    color: #999;
    position: absolute;
    right: 20rpx;
    top: 0;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.item .icon-arrow {
    margin-left: 25rpx;
}

.icon-arrow image {
    width: 13rpx;
    height: 23rpx;
}

.sport {
    height: 98rpx;
    line-height: 98rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.upload {
    height: 319rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}
.active_img{
    width: 690rpx;
    height: 319rpx;
}

.pla_img {
    border: 1rpx solid rgba(240, 240, 240, 1);
    border-radius: 10px;
    font-size: 26rpx;
    color: #999;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
    padding: 20rpx 40rpx 8rpx;
}

.note_text {
    line-height: 60rpx;
}

.sctp {
    height: 30rpx;
}

.note_img {
    width: 60rpx;
    height: 48rpx;
}

.issue .title {
    font-size: 26rpx;
    line-height: 54rpx;
    color: #e8380d;
    font-weight: 900;
    padding-left: 21rpx;
}
.issue .zh_title{
    height: 60rpx;
    /* line-height: 60rpx; */
}

.hd_item {
    height: 106rpx;
    position: relative;
}

.hd_item .left {
    line-height: 106rpx;
}

.radius_top {
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    margin-bottom: 2rpx;
}

.radius_bottom {
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    margin-bottom: 2rpx;
}

.weui-input {
    /* border: 1px solid blue; */
    margin-top: 20rpx;
    text-align: right;
    width: 420rpx;
    color: #999;
}
.issue_input{
    width: 420rpx;
    /* border: 1px solid red; */
    text-align: right;
    padding-right: 20rpx;
}
.phoneInput{
    width: 420rpx;
    margin-top: 30rpx;
    text-align: right;
}

.item_bfb {
    position: absolute;
    right: 40rpx;
    bottom: 10rpx;
    font-size: 22rpx;
}

.item_bfb>view {
    display: inline-block;
    vertical-align: top;
}

.tabs {
    width: 690rpx;
    min-height: 66rpx;
    background-color: white;
    font-size: 26rpx;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.tab {
    color: #999;
    /* height: 38rpx; */
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    border: 1rpx solid rgba(240, 240, 240, 1);
    border-radius: 10rpx;
    margin-right: 16rpx;
    box-sizing: border-box;
    padding: 16rpx;
    margin-bottom: 10rpx;
}

.add_tab {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    border-radius: 10rpx;
    padding: 16rpx 16rpx;
    margin-bottom: 10rpx;
    border: 1px solid rgba(102, 102, 102, 1);
    margin-left: 20rpx;
}
.add_tab_active{
    background-color: #e8380d;
    color: white;
    border: none;
}

.add_img {
    width: 16rpx;
    height: 16rpx;
    margin-right: 6rpx;
}

.cancel_icon {
    margin-left: 6rpx;
}

.time_list {
    height: 99rpx;
    box-sizing: border-box;
    background-color: white;
    padding: 0 20rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.item_value {
    flex-grow: 1;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    font-size: 26rpx;
    color: #999;
    height: 95%;
    align-items: center;
}

.item_date {
    font-size: 26rpx;
}

.item_time {
    margin-left: 40rpx;
    margin-right: 20rpx;
}

.address {
    width: 23rpx;
    height: 33rpx;
    margin-left: 16rpx;
}

.siteName {
    height: 98rpx;
    background-color: white;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    /* justify-content: center; */
    padding: 0 20rpx;
}

.address_input {
    width: 230rpx;
    color: #999;
}

.site_input {
    width: 150rpx;
    color: #999;
}

.funds {
    width: 690rpx;
    background-color: white;
    padding: 30rpx 20rpx 10rpx;
    box-sizing: border-box;
}

.funds_sf {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-bottom:42rpx;
}

.funds_sf radio {
    margin-left: 10rpx;
}

.textarea {
    width: 690rpx;
    box-sizing: border-box;
    min-height: 154rpx;
    border-radius: 10rpx;
    background-color: white;
    padding: 20rpx;
    display: flex;
    flex-flow: row wrap;
}

.getPhone {
    height: 39rpx;
    line-height: 39rpx;
    background: rgba(232, 56, 13, 1);
    text-align: center;
    color: white;
    margin-top: 30rpx;
    font-size: 24rpx;
}


.issue .noBottom {
    margin-bottom: 2rpx;
    border-bottom-left-radius: 0rpx;
    border-bottom-right-radius: 0rpx;
}

.issue .noRadius {
    border-top-left-radius: 0rpx;
    border-top-right-radius: 0rpx;
}

.radio_fy {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    color: #666;
    margin-bottom: 26rpx ;
}

.ps_img {
    width: 11rpx;
    height: 31rpx;
}

.ps_img_wm {
    width: 16rpx;
    height: 31rpx;
}

.tab_fy {
    width: 95rpx;
    height: 30rpx;
    line-height: 30rpx;
    border: 1px solid rgba(102, 102, 102, 1);
    border-radius: 17px;
    text-align: center;
    margin: 0 16rpx;
}

.note_tk {
    font-size: 20rpx;
}

.punish {
    width: 690rpx;
    height: 98rpx;
    background-color: white;
    border-radius: 10rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.input_num {
    width: 70rpx;
    height: 36rpx;
    border-radius: 5rpx;
    border: 1px solid rgba(102, 102, 102, 1);
    padding: 0 10rpx;
    box-sizing: border-box;
}

.submit {
    width: 690rpx;
    height: 72rpx;
    line-height: 72rpx;
    background: rgba(232, 56, 13, 1);
    border-radius: 10px;
    color: white;
    font-size: 26rpx;
    margin: 17rpx 0 45rpx 0;
    letter-spacing: 2rpx;
}
.zh_btn{
   /* width: 126rpx; */
   height: 40rpx;
   color: white;
   font-size: 20rpx;
   display: flex;
   flex-flow: row nowrap;
   align-items: center;
   padding: 0 20rpx;
   border-radius: 10rpx;
   background-color: #E8380D;
   position: absolute;
   right: 0;
   top: 9rpx;
}
.zh_img{
    width: 22rpx;
    height: 19rpx;
    margin: 0 10rpx;
}
/* .pop_title{
    text-align: center;
} */
.pop_input{
    border: 1px solid lightgray;
}
.desc_add{
    width: 160rpx;
    height: 160rpx;
    line-height: 150rpx;
    border: 1rpx solid rgba(102, 102, 102, 1);
    color: rgba(102, 102, 102, 1);
    font-size: 100rpx;
    text-align: center;
}
.desc_image{
    width:150rpx;
    height:150rpx;
    position: relative;
    border: 1rpx solid rgba(102, 102, 102, 0.3);
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}
.desc_image image{
    width: 150rpx;
    height: 150rpx;
}
.del{
    font-size: 24rpx;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    background-color: rgba(102, 102, 102, 0.3);
    position: absolute;
    right: 0;
    top: 0;
}
