

.home {
    background-color: #F0F0F0;
    min-height: 100vh;
    padding-top: 10rpx;
    padding-bottom: 40rpx;
    box-sizing: border-box;
}

.home_card {
    background-color: white;
    padding: 18rpx 30rpx;
    margin-bottom: 10rpx;
}

.topitem {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.ads_img {
    width: 25rpx;
    height: 35rpx;
    margin-right: 20rpx;
}

.scan {
    width: 33rpx;
    height: 33rpx;
}

.address_input {
    flex-grow: 1;
}

.dateList {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
    margin-top: 30rpx;
}

.dateItem {
    width: 162rpx;
    height: 93rpx;
    border: 1rpx solid rgba(224, 224, 224, 1);
    border-radius: 10rpx;
    font-size: 28rpx;
    position: relative;
}

.dateMain {
    padding: 10rpx 0 0 10rpx;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
}

.bg_img {
    width: 162rpx;
    height: 93rpx;
}

.actived {
    color: white;
}

.h_select {
    display: flex;
    flex-flow: row nowrap;
    padding: 15rpx 0;
    font-size: 28rpx;
    background: white;
    margin-top: 10rpx;
    position: relative;
}

.hp_select {
    flex: 1;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}

.h_jt {
    width: 23rpx;
    height: 13rpx;
    margin-left: 12rpx;
}

.bd_right {
    border-right: 1px solid #818181;
}

.select_main {
    position: absolute;
    top: 66rpx;
    left: 0;
    width: 100vw;
    background: white;
    display: flex;
    flex-flow: row wrap;
    padding: 20rpx 0;
    justify-content: space-around;
}

.select_btn {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 20rpx;
    border: 1px solid grey;
    border-radius: 50rpx;
}

.s_active {
    color: #E8380D;
}

.itemActive {
    border: 1px solid #E8380D;
}

.h_main {
    padding: 31rpx;
    box-sizing: border-box;
    margin-top: 10rpx;
    background-color: white;
}
.h_item{
    margin-bottom: 20rpx;
}

.item_line {
    height: 28rpx;
    width: 1rpx;
    background: #C0C0C0;
    margin-left: 72rpx;
}

.item_img {
    width: 144rpx;
    height: 42rpx;
    vertical-align: top;
}

.item_main {
    /* width: 640rpx; */
    background: white;
    padding: 27rpx 18rpx 0rpx;
    box-sizing: border-box;
    margin: 0 auto;
    border: 1px solid rgba(228, 228, 228, 1);
    border-radius: 10rpx;
}

.item_title {
    font-size: 28rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 27rpx;
    font-weight: 900;
}

.actv_btn {
    padding: 0 20rpx;
    height: 46rpx;
    font-size: 22rpx;
    background: #F26746;
    border-radius: 17rpx;
    color: white;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}
.actv_btn .add{
    width:15rpx;
    height: 15rpx;
    margin-right: 6rpx;
}
.noactv_btn{
    background: #868686;
}

.item_ct {
    background: #F8F8F8;
    padding: 20rpx 16rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #333;
    border-radius: 10rpx;
    position: relative;
}
.waterDrop{
    position: absolute;
    top: 40rpx;
    right: 10rpx;
}
.waterDrop .dropImg{
    width: 93rpx;
}
.waterDrop .dropText{
    position: absolute;
    top: 0;
    left: 0;
    width: 88rpx;
    text-align: center;
    line-height: 80rpx;
    color: white;
}

.row {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.iocn_h {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
    flex-shrink: 0;
}

.text_h {
    /* width: 280rpx; */
    height: 45rpx;
    line-height: 45rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding-right: 20rpx;
    box-sizing: border-box;

}

.mag {
    margin-left: 60rpx;
}
.jl{
    height: 60rpx;
    font-size: 24rpx;
    color: #333;
    text-align: right;
}