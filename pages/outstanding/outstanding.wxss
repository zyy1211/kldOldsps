/* pages/outstanding/outstanding.wxss */

.outstanding {
    padding: 0 30rpx;
}
.ots_list{
    padding-bottom: 50rpx;
}
.ots_tabs{
    display: flex;
    flex-flow: row nowrap;
    font-size:28rpx;
    color: #333;
    height: 62rpx;
    line-height: 62rpx;
}
.ots_ing,.ots_ed{
    flex: 1;
    border: 1rpx solid #E8380D;
    box-sizing: border-box;
    text-align: center;
}
.ots_active{
    background: #E8380D;
    color: white;
}
.ots_item {
    width: 690rpx;
    border: 1rpx solid rgba(225, 224, 224, 1);
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    line-height: 50rpx;
    margin-top: 12rpx;
}
.ots_item>view{
    display: flex;
    flex-flow: row nowrap;
}
.ots_key{
    color: #333333;
}
.ots_value{
    color: #666666;
}
.ots_money{
    font-size: 30rpx;
}