

@import '../cardList/cardList.wxss';

.mycardtitle{
    font-size: 28rpx;
    font-weight: 900;
    text-align: left;
    width: 690rpx;
    margin-bottom: 30rpx;
}

.triangle-topright {
    position: absolute;
    right: 0;
    top: 0;
    width: 0;
    height: 0;
    border-top: 70rpx solid red;
    border-left: 70rpx solid transparent; 
}
.dicon{
    position: absolute;
    right: 0;
    top: -60rpx;
}
.smoke{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: black;
    opacity: 0.7;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}
.text{
    /* margin: 20rpx 0; */
    margin-left: 70rpx;
    font-size: 32rpx;
}