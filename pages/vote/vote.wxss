.vote {
    background: rgba(240, 240, 240, 1);
    padding: 10rpx 30rpx 0;
    font-size: 28rpx;
    color: #333;
    min-height: 100vh;
}

.vote_tabs {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.vt_tab {
    width: 220rpx;
    height: 57rpx;
    line-height: 57rpx;
    background: rgba(255, 255, 255, 1);
    font-size: 28rpx;
    color: #333;
    text-align: center;
}

.vote_active {
    color: white;
    background-color: #F26846;
}

.vote_title {
    font-size: 34rpx;
    text-align: center;
    padding: 26rpx 0;
}

.vote_air {
    width: 23rpx;
    height: 14rpx;
    margin-right: 20rpx;
}

.vote_share {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.air_img {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    color: #999;
}

.share_img {
    width: 32rpx;
    height: 32rpx;
}

.share_time {
    font-size: 24rpx;
    line-height: 70rpx;
}

.v_banner {
    width: 690rpx;
    height: 271rpx;
}

.sc_item {
    background-color: white;
    padding: 12rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    margin: 12rpx 0;
    font-size: 20rpx;
}

.vote_input {
    width: 334rpx;
    height: 40rpx;
    border: 1px solid rgba(189, 189, 189, 1);
    position: relative;
}

.vote_input input {
    padding: 0 36rpx 0 20rpx;
}

.search_img {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
}

.vote_filter {
    width: 29rpx;
    height: 29rpx;
}

.notify {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-size: 22rpx;
    background: white;
    padding: 10rpx 20rpx;
    margin-bottom: 10rpx;
}

.v_vo_img {
    width: 24rpx;
    height: 22rpx;
    margin-right: 20rpx;
}

.nty_left {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    color: #666;
}

.nty_right {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.note_list {
    background: white;
    padding: 13rpx;
}

.note_item {
    background: rgba(240, 240, 240, 1);
    border-radius: 10rpx;
    padding: 16rpx 20rpx;
    font-size: 22rpx;
    color: #666;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.item_id {
    width: 38rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    background: rgba(101, 101, 101, 1);
    border-radius: 50%;
    color: white;
    font-size: 18rpx;
}
.item_name{
    line-height: 40rpx;
}

.item_btn {
    width: 84rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    background: rgba(232, 56, 13, 1);
    color: white;
}
.item_one{
    color: #FF4A4A;
}
.item_two{
    color: #4AA5FF;
}
.item_three{
    color: #FFAC4A;
}
.item_four{
    color: #09C9A2;
}