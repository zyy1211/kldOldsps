/* pages/city/city.wxss */

.letter-box {
    position: fixed;
    top: 200rpx;
    right: 10rpx;
    z-index: 100;
    color: #999;
    font-size: 22rpx;
}

.letter-item {
    display: block;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 30rpx;
}

.letter-item.active {
    background: #F4F4F4;
}

.content-box {
    position: fixed;
    top: 100rpx;
    left: 0;
    bottom: 0;
    right: 0;
  
}

.content-box {
    bottom: 68rpx;
}

.city-item,.search-city-item {
    display: block;
    border-bottom: 2rpx solid #f3f3f3;
}

.form-for-formid button[type="default"] {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
    background: none;
}
.form-for-formid button[type="default"]::after {
    border: none;
}
.city-box,.search-city-box {
    width: 710rpx;
    /* margin-top: 20rpx; */
    padding: 0 20rpx;
    /* border-top: 20rpx solid #f3f3f3; */
    line-height: 100rpx;
    font-size: 26rpx;
}

.city-letter-title {
    padding: 28rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 20rpx;
}

.city-item,.search-city-item {
    display: block;
    border-bottom: 2rpx solid #f3f3f3;
}